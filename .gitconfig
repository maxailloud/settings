[user]
	name = Maxime AILLOUD
	email = maxime.ailloud@gmail.com
[core]
        excludesfile = /home/maxime/.gitignore_global
[alias]
	st = status
	dif = diff
	co = checkout
	rmall = "!sh -c 'git rm $(git ls-files --deleted)'"
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[push]
        default = upstream

[color]
	status = auto
	branch = auto
	diff   = auto
	ui     = true
[core]
	editor = vi
	filemode = false
